@using NewsreaderWebApp.Models
@model  MssgNavViewModels
    <div class="col-md-2">
        <p>Messages.</p>
        <div id="divMessageList" style="overflow-y: scroll; height:500px;">
            <ul class="list-group">
                @foreach (var item in Model.Messages)
                {
                    <li class="list-group-item">
                        @Html.ActionLink(@item.Title,
                       "Index",
                       "NewsHome",
                       new { id = @item.FeedNewsArticleId ,  viewAll = @Model.IsViewingAll },
                       new { @class = "myLink", data_id = item.FeedNewsArticleId })
                    </li>
                }
            </ul>
        </div>
        <p>Swipe to see all messages </p>
        <td class="slider-td">
            <label class="switch">
                @Html.CheckBoxFor(model => model.IsViewingAll)
                <div class="slider round"></div>
            </label>
        </td>


    </div>
@{
    Html.RenderPartial("_MessageView", Model);
}


@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/mark")
@Scripts.Render("~/Content/css")
<script type="text/javascript">
    $(function () {
        $('.myLink').click(function () {
            // get the id:
            var id = $(this).data('id');

            $(this.parentElement).addClass("active");

        });
    });
</script>

<style type="text/css">
    .switch {
        position: relative;
        display: inline-block;
        width: 60px;
        height: 34px;
    }

        .switch input {
            display: none;
        }

    .slider {
        position: absolute;
        cursor: pointer;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: #ccc;
        transition: .4s;
    }

        .slider:before {
            position: absolute;
            content: "";
            height: 26px;
            width: 26px;
            left: 4px;
            bottom: 4px;
            background-color: white;
            transition: .4s;
        }

    /* include generated hidden field here */
    input[type="checkbox"]:checked + input[type="hidden"] + .slider,
    input[type="checkbox"]:checked + .slider {
        background-color: #2196F3;
    }

    /* include generated hidden field here */
    input[type="checkbox"]:focus + input[type="hidden"] + .slider,
    input[type="checkbox"]:focus + .slider {
        box-shadow: 0 0 1px #2196F3;
    }

    /* include generated hidden field here */
    input[type="checkbox"]:checked + input[type="hidden"] + .slider:before,
    input[type="checkbox"]:checked + .slider:before {
        transform: translateX(26px);
    }

    /* Rounded sliders */
    .slider.round {
        border-radius: 34px;
    }

        .slider.round:before {
            border-radius: 50%;
        }
</style>



